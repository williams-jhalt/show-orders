{% extends 'sales/sales.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function() {
            $('#customerTable').DataTable();
            $('#customerTable').show();
        });
    </script>
{% endblock %}

{% block body %}

    <h1>Customers list</h1>

    <table id="customerTable" class="table" style="display:none;">
        <thead>
            <tr>
                <th>Customer Number</th>
                <th>Company</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for customer in customers %}
                <tr>
                    <td><a href="{{ path('sales_customer_show', { 'id': customer.id }) }}">{{ customer.customerNumber }}</a></td>
                    <td>{{ customer.company }}</td>
                    <td>{{ customer.lastName }}, {{ customer.firstName }}</td>
                    <td>
                        <a class="btn btn-sm btn-default" href="{{ path('sales_customer_edit', { 'id': customer.id }) }}">edit</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
