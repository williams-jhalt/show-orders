{% extends 'admin.html.twig' %}

{% block body %}

    <h1>Customers list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Customer Number</th>
                <th>Company</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for customer in customers %}
                <tr>
                    <td><a href="{{ path('customer_show', { 'id': customer.id }) }}">{{ customer.customerNumber }}</a></td>
                    <td>{{ customer.company }}</td>
                    <td>{{ customer.lastName }}, {{ customer.firstName }}</td>
                    <td>
                        <a class="btn btn-sm btn-default" href="{{ path('customer_edit', { 'id': customer.id }) }}">edit</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


    <p><a class="btn btn-primary" href="{{ path('customer_new') }}">Create a new customer</a></p>

{% endblock %}
