{% extends 'admin/admin.html.twig' %}

{% block body %}

    <h1>Sales Person</h1>

    <table class="table table-condensed">
        <tbody>
            <tr>
                <th>Sales Person Number</th>
                <td>{{ salesperson.salesPersonNumber }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ salesperson.name }}</td>
            </tr>
            <tr>
                <th>Order Total</th>
                <td>${{ salesperson.orderTotal|number_format(2) }}</td>
            </tr>
        </tbody>
    </table>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Customer Number</th>
                <th>Order Total</th>
            </tr>
        </thead>
        <tbody>
            {% for customer in salesperson.customers %}
                <tr>
                    <td>{{ customer.customerNumber }}</td>
                    <td>${{ customer.showOrder.orderTotal|number_format(2) }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <p>
        <a class="btn btn-default" href="{{ path('salesperson_index') }}"><i class="glyphicon glyphicon-arrow-left"></i> Back</a>
        <a class="btn btn-default" href="{{ path('salesperson_edit', { 'id': salesperson.id }) }}"><i class="glyphicon glyphicon-pencil"></i> Edit</a>   
    </p>

{% endblock %}
