{% extends 'admin/admin.html.twig' %}

{% block body %}

    <div class="pull-right">         
        {{ form_start(delete_form) }}
        <input class="btn btn-danger" type="submit" value="Delete">
        {{ form_end(delete_form) }}
    </div>

    <h1>Vendor</h1>
    
    <img src="{{ asset('uploads/vendors/' ~ vendor.imageUrl) }}">

    <table class="table table-condensed">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vendor.id }}</td>
            </tr>
            <tr>
                <th>Vendornumber</th>
                <td>{{ vendor.vendorNumber }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ vendor.company }}</td>
            </tr>
            <tr>
                <th>Booths</th>
                <td>{% for booth in vendor.booths %}{{ booth }}/{% endfor %}</td>
            </tr>
        </tbody>
    </table>

    <p>
        <a class="btn btn-default" href="{{ path('vendor_index') }}"><i class="glyphicon glyphicon-arrow-left"></i> Back</a>
        <a class="btn btn-default" href="{{ path('vendor_edit', { 'id': vendor.id }) }}"><i class="glyphicon glyphicon-pencil"></i> Edit</a>   
    </p>
{% endblock %}
