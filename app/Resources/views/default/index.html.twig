{% extends 'base.html.twig' %}

{% block body %}

    {% for message in app.flashes('notice') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6 text-center">

            <form class="form-inline" action="{{ path('set_customer_number') }}" method="post">
                <sup>If you do not know your customer number, please ask a sales representative</sup><br>
                <div class="form-group">
                    <input class="form-control" type="text" name="customerNumber" placeholder="Customer Number">
                </div>
                <button class="btn btn-default" type="submit">Start Ordering</button>
            </form>

            <p><u>Open to Active and New Williams Trading Accounts Only</u></p>
            <p>To attend this event, you must be an approved Williams Trading Co wholesale customer, 
            please proceed and register and you will be contacted with your approval links. If you are a 
            wholesale adult retailer and would like to attend this event, please set up a new account 
            contact Paul at <a href="mailto:preutershan@williams-trading.com">preutershan@williams-trading.com</a>. Please note this event is open to active 
            wholesale accounts only.</p>

        </div>

        <div class="col-sm-3"></div>
    </div>

{% endblock %}
